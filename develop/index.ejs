  <script type="module">
    // 1.  minimum date = tomorrow 09:00
    const min = new Date();
    min.setDate(min.getDate() + 1);
    min.setHours(9, 0, 0, 0);
    document.querySelector('[name="date"]').min = min.toISOString().slice(0, 16);

    // 2.  SQLite in browser (via sql.js)
    import initSqlJs from 'https://cdn.jsdelivr.net/npm/sql.js@1.8.0/dist/sql-wasm.js';
    const SQL = await initSqlJs({ locateFile: file => `https://cdn.jsdelivr.net/npm/sql.js@1.8.0/dist/${file}` });
    const db = new SQL.Database();
    db.run(`CREATE TABLE IF NOT EXISTS appointments (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        name TEXT NOT NULL,
        email TEXT NOT NULL,
        phone TEXT NOT NULL,
        date TEXT NOT NULL,
        created_at DATETIME DEFAULT CURRENT_TIMESTAMP
    )`);

    // 3.  send email (built-in mailto – works in any browser)
    function sendAppointmentEmail(to, name, date) {
      const subject = 'New appointment booked';
      const body = `Name: ${name}\nDate: ${date}\n\nBooked on ${new Date().toISOString()}`;
      window.location.href = `mailto:${to}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
    }

    // 4.  handle submit
    document.getElementById('aptForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const name = e.target.name.value.trim();
      const email = e.target.email.value.trim();
      const phone = e.target.number.value.trim();
      const date = e.target.date.value.trim();

      if (!name || !email || !phone || !date) {
        document.getElementById('msg').textContent = 'All fields are required.';
        return;
      }
      if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
        document.getElementById('msg').textContent = 'Invalid email.';
        return;
      }
      // prevent double-booking (same minute)
      const stmt = db.prepare("SELECT id FROM appointments WHERE date = ? LIMIT 1");
      stmt.bind([date]);
      if (stmt.get()) {
        document.getElementById('msg').textContent = 'That time is already booked.';
        return;
      }
      stmt.free();

      db.run("INSERT INTO appointments (name, email, phone, date) VALUES (?, ?, ?, ?)", [name, email, phone, date]);
      sendAppointmentEmail('rubin.r4@gmail.com', name, date);   // ← your mailbox
      document.getElementById('msg').textContent = 'Appointment confirmed. We will contact you shortly.';
      e.target.reset();
    });
  </script>

